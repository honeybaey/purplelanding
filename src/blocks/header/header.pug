include ../btn/btn

mixin header(params)
  - const { menuItems, href } = params;

  header.header
    .header__nav.container
      .header__logo
        a(href='#' class='header__logo-link') Logo
      nav.header__menu
        ul.header__menu-list
          each menuItem in menuItems
            - const { name, href, submenu } = menuItem;

            li.header__menu-item
              a.header__menu-link(href=href)=name
      +btn({
          className: 'btn',
          label: 'Request a Quote',
          href: '#',
        })

    section.header__description
      h1.header__description-title Branding and UI/UX design agency
      p.header__description-text We provide cutting edge solutions that make you Visible!
