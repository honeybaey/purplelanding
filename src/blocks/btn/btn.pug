mixin btn(params)

    - const { label, type='submit', className, href } = params;

    mixin btnContent(label)
      span.btn__label=label

    if href
        a(
            class=className
            href=href
        )
            +btnContent(label)
    else
        button(
            class=className
            type=type
        )
            +btnContent(label)