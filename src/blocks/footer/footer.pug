include ../socials/socials

mixin footer()

  footer.footer
    .footer-wrapper.container
      .footer-top
        .footer__logo
          a(href='#' class='footer__logo-link') Logo6
        +socials
      .footer-main
        +footer__item({
          text: 'Request a Quote',
          description: 'Schedule here',
          alt: 'work time',
          logoName: 'work_time'
        })
        +footer__item({
          text: 'hello@vijayverma.co',
          description: 'online quotation',
          alt: 'email',
          logoName: 'email'
        })
        +footer__item({
          text: 'New Delhi, India',
          description: 'Office Location',
          alt: 'location',
          logoName: 'location'
        })

mixin footer__item(params)

  - const { text, description, alt, logoName} = params;

  .footer__item
    .footer__icon-wrap
      img(class='footer__item-icon' src=require(`../blocks/footer/${logoName}.png`), alt=`${alt}`)
    .footer__item-info
      p.footer__item-text=text
      span.footer__item-descr=description